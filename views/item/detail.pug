extends ../layout

block content 
    h1= title 

    div 
        h2= item.name 
        p By #{item.company}
        p #{item.inStock} in stock 
        p Category: #[a(href=item.category.url) #{item.category.name}] 
        p Price: $#{item.price}
        p Description: #{item.description}
        img(src=`/images/uploads/${item.image}`, alt="" style='width: 150px')

    p
        a(href=item.url + '/delete') Delete item 
    p
        a(href=item.url + '/update') Update item 