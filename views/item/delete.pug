extends ../layout

block content 
    h1= title 

    div 
        h2= item.name 
        p By #{item.company}
        p #{item.inStock} in stock 
        p Category: #[a(href=item.category.url) #{item.category.name}] 
        p Price: $#{item.price}
        p Description: #{item.description}

    h3 Are you sure you want to delete this item?
    form(action="" method='post')
        button(type="submit") Delete 